---
interface Props {
  type?: "button" | "submit" | "reset";
  variant?: "primary" | "secondary";
  class?: string;
}

const { 
  type = "button", 
  variant = "primary",
  class: className = "" 
} = Astro.props;

const variantClasses = {
  primary: 'text-white bg-primary hover:bg-primary/90',
  secondary: 'text-gray-700 bg-gray-200 hover:bg-gray-300',
};

const classes = `px-4 py-2 transition-colors duration-200 font-medium rounded-sm ${variantClasses[variant]} ${className}`;
---

<button 
  type={type} 
  class={classes}
>
  <slot />
</button>