---
import Layout from "../layouts/Layout.astro";
import TournamentRegistrationForm from "../components/TournamentRegistrationForm.astro";
---

<Layout title="Soccer Tournament Registration">
  <div class="max-w-4xl mx-auto">
    <div class="mb-8 text-center">
      <h1 class="text-3xl font-bold mb-4">Soccer Tournament Registration</h1>
      <p class="text-gray-600">
        Fill out the form below to register your team for the upcoming soccer tournament.
        Make sure to provide all required information to complete your registration.
      </p>
    </div>
    
    <TournamentRegistrationForm />
  </div>
</Layout>