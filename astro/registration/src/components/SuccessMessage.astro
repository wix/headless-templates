---
interface Props {
  title?: string;
  message?: string;
  class?: string;
}

const {
  title = "Success!",
  message = "Your form has been submitted successfully.",
  class: className = "",
} = Astro.props;
---

<div class={`bg-green-50 border border-green-200 rounded-lg p-6 text-center ${className}`}>
  <svg
    xmlns="http://www.w3.org/2000/svg"
    class="h-12 w-12 mx-auto text-green-500 mb-4"
    fill="none"
    viewBox="0 0 24 24"
    stroke="currentColor"
  >
    <path
      stroke-linecap="round"
      stroke-linejoin="round"
      stroke-width="2"
      d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"
    />
  </svg>
  <h3 class="text-xl font-semibold text-green-800 mb-2">{title}</h3>
  <p class="text-green-700">{message}</p>
  <slot />
</div>