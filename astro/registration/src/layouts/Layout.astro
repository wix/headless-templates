---
interface Props {
  title: string;
  description?: string;
}

const { title, description = "Soccer Tournament Registration Form" } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <meta name="description" content={description} />
    <title>{title}</title>
  </head>
  <body>
    <div class="min-h-screen flex flex-col">
      <header class="bg-primary text-white py-4">
        <div class="container mx-auto px-4">
          <h1 class="text-2xl font-bold">Soccer Tournament Registration</h1>
        </div>
      </header>
      
      <main class="flex-grow container mx-auto px-4 py-8">
        <slot />
      </main>
      
      <footer class="bg-gray-100 py-4 mt-auto">
        <div class="container mx-auto px-4 text-center text-gray-600 text-sm">
          &copy; {new Date().getFullYear()} Soccer Tournament Registration. All rights reserved.
        </div>
      </footer>
    </div>
  </body>
</html>

<style is:global>
  @import "../styles/global.css";
</style>