---
interface Props {
  title: string;
  description?: string;
}

const { title, description = "Soccer Tournament Registration Form" } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <meta name="description" content={description} />
    <title>{title}</title>
  </head>
  <body>
    <div class="min-h-screen flex flex-col">
      <header class="text-[#ffffff] py-[1rem]" style="background-color: var(--primary-color, #3899EC);">
        <div class="container mx-auto px-[1rem]">
          <h1 class="text-2xl font-[700]">Soccer Tournament Registration</h1>
        </div>
      </header>
      
      <main class="flex-grow container mx-auto px-[1rem] py-[2rem]">
        <slot />
      </main>
      
      <footer class="bg-[#f3f4f6] py-[1rem] mt-auto">
        <div class="container mx-auto px-[1rem] text-center text-[#4b5563] text-[0.875rem]">
          &copy; {new Date().getFullYear()} Soccer Tournament Registration. All rights reserved.
        </div>
      </footer>
    </div>
  </body>
</html>

<style is:global>
  @import "../styles/global.css";
</style>