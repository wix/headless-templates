---
import Layout from "../layouts/Layout.astro";
import MediaManager from "../components/MediaManager.astro";

const title = "Media Manager";
---

<Layout title={title}>
  <div class="bg-white border-b border-gray-200 shadow-sm">
    <header class="container mx-auto p-4">
      <div class="flex items-center">
        <div class="font-bold text-2xl text-blue-600">{title}</div>
      </div>
    </header>
  </div>

  <MediaManager />
</Layout>
