---
import WixImage from "./WixImage.tsx";
import { getImageId } from "../utils/imageUtils";
import { updateFileDescriptor } from "../utils/mediaApi";
import { dispatchMediaUpdatedEvent } from "../utils/eventUtils";
import type { MediaItem } from "../types";
const { item } = Astro.props;
---

<>
  {
    item && (
      <div class="fixed inset-0 bg-gray-100 bg-opacity-15 flex items-center justify-center z-50">
        <div class="bg-white rounded-lg shadow-xl w-full max-w-3xl">
          <div class="flex flex-col h-full">
            <div class="p-3 border-b border-gray-200 flex justify-between items-center bg-gray-50">
              <h3 class="font-medium text-gray-700 text-sm">File Details</h3>
              <button
                class="text-gray-500 hover:text-gray-700"
                id="close-media-viewer"
              >
                <svg
                  class="w-5 h-5"
                  fill="none"
                  stroke="currentColor"
                  viewBox="0 0 24 24"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width={2}
                    d="M6 18L18 6M6 6l12 12"
                  />
                </svg>
              </button>
            </div>
            <div class="flex-grow overflow-hidden bg-gray-100 relative">
              <div class="bg-black flex items-center justify-center overflow-hidden">
                {item.mediaType === "IMAGE" ? (
                  <WixImage
                    uri={getImageId(item.url)}
                    width={1500}
                    height={1500}
                    displayMode="fit"
                    containerWidth={800}
                    containerHeight={400}
                    isInFirstFold={true}
                    isSEOBot={false}
                    shouldUseLQIP={true}
                    alt={item.name}
                  />
                ) : (
                  <video
                    src={item.url}
                    controls
                    class="max-w-full max-h-full"
                  />
                )}
              </div>
            </div>
            <div class="p-4 border-t border-gray-200">
              <div class="mb-3">
                <div class="flex items-center">
                  <h4 class="font-medium text-gray-800 truncate flex-grow">
                    {item.name}
                  </h4>
                </div>
                <span class="text-xs text-gray-500">
                  Uploaded on {new Date(item._createdDate).toLocaleDateString()}
                </span>
              </div>
              <div class="space-y-2 text-sm">
                <div class="flex justify-between">
                  <span class="text-gray-500">Type</span>
                  <span class="text-gray-800 font-medium">
                    {item.mediaType}
                  </span>
                </div>
              </div>
              <div class="mt-6 flex gap-2">
                <a
                  href={item.url}
                  download={item.name}
                  class="flex-1 flex justify-center items-center px-3 py-2 bg-blue-600 text-white rounded-md hover:bg-blue-700 transition-colors text-sm font-medium"
                >
                  <svg
                    class="w-4 h-4 mr-2"
                    fill="currentColor"
                    viewBox="0 0 24 24"
                  >
                    <path d="M19 9h-4V3H9v6H5l7 7 7-7zM5 18v2h14v-2H5z" />
                  </svg>
                  Download
                </a>
                <button
                  class="px-3 py-2 border border-gray-300 text-gray-700 rounded-md hover:bg-gray-50 transition-colors text-sm flex items-center"
                  data-open-url={item.url}
                >
                  <svg
                    class="w-4 h-4 mr-2"
                    fill="currentColor"
                    viewBox="0 0 24 24"
                  >
                    <path d="M19 19H5V5h7V3H5c-1.11 0-2 .9-2 2v14c0 1.1.89 2 2 2h14c1.1 0 2-.9 2-2v-7h-2v7zM14 3v2h3.59l-9.83 9.83 1.41 1.41L19 6.41V10h2V3h-7z" />
                  </svg>
                  Open
                </button>
              </div>
            </div>
          </div>
        </div>
      </div>
    )
  }
</>

<script>
  document.addEventListener("DOMContentLoaded", () => {
    document.querySelectorAll("[data-open-url]").forEach((btn) => {
      btn.addEventListener("click", () => {
        const url = btn.getAttribute("data-open-url");
        if (url) window.open(url, "_blank");
      });
    });
    const closeBtn = document.getElementById("close-media-viewer");
    if (closeBtn) {
      closeBtn.addEventListener("click", () => {
        const modal = closeBtn.closest(".fixed");
        if (modal) modal.style.display = "none";
      });
    }
  });
</script>
