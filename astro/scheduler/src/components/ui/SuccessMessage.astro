---
interface Props {
  message: string;
  class?: string;
  showIcon?: boolean;
}

const { 
  message, 
  class: className = '', 
  showIcon = true 
} = Astro.props;
---

<div class={`bg-green-50 border border-green-200 text-green-700 px-4 py-3 rounded relative ${className}`} role="alert">
  {showIcon && (
    <svg class="h-5 w-5 inline-block mr-1" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg">
      <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
    </svg>
  )}
  <span class="text-sm">{message}</span>
</div>