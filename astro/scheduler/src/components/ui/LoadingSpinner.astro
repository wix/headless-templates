---
import Icon from './Icon.astro';

interface Props {
  text?: string;
  class?: string;
  size?: 'sm' | 'md' | 'lg';
}

const { text, class: className = '', size = 'md' } = Astro.props;
---

<div class={`flex justify-center items-center ${className}`}>
  <Icon name="spinner" size={size} class="animate-spin text-primary" />
  {text && (
    <span class="ml-2 text-sm text-muted-foreground">
      {text}
    </span>
  )}
</div>