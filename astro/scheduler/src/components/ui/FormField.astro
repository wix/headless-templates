---
interface Props {
  id: string;
  label: string;
  type?: 'text' | 'email' | 'tel' | 'textarea';
  placeholder?: string;
  required?: boolean;
  class?: string;
}

const { 
  id, 
  label, 
  type = 'text', 
  placeholder = '', 
  required = false,
  class: className = '' 
} = Astro.props;

const baseClasses = "w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-primary focus:border-transparent";
---

<div class={className}>
  <label for={id} class="block text-sm font-medium mb-1">{label}</label>
  
  {type !== 'textarea' ? (
    <input 
      type={type} 
      id={id} 
      name={id} 
      placeholder={placeholder} 
      required={required}
      class={baseClasses}
    />
  ) : (
    <textarea 
      id={id} 
      name={id} 
      placeholder={placeholder} 
      required={required}
      class={baseClasses}
    ><slot /></textarea>
  )}
</div>