---
interface Props {
  message: string;
  class?: string;
  showIcon?: boolean;
}

const { 
  message, 
  class: className = '', 
  showIcon = true 
} = Astro.props;
---

<div class={`bg-red-50 border border-red-200 text-red-700 px-4 py-3 rounded relative ${className}`} role="alert">
  {showIcon && (
    <svg class="h-5 w-5 inline-block mr-1" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg">
      <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zm-1 9a1 1 0 100-2 1 1 0 000 2z" clip-rule="evenodd"></path>
    </svg>
  )}
  <span class="text-sm">{message}</span>
</div>