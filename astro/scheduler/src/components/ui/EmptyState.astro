---
import Icon from './Icon.astro';

interface Props {
  icon?: 'calendar' | 'clock' | 'info';
  title?: string;
  message: string;
  class?: string;
}

const { 
  icon = 'info', 
  title, 
  message,
  class: className = '' 
} = Astro.props;
---

<div class={`text-center ${className}`}>
  <Icon name={icon} class="mx-auto mb-2 text-muted-foreground" />
  
  {title && (
    <h3 class="text-sm font-medium mb-1">{title}</h3>
  )}
  
  <p class="text-sm text-muted-foreground">{message}</p>
</div>