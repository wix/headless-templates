---
interface Props {
  title?: string;
  empty?: boolean;
  emptyMessage?: string;
  class?: string;
}

const { title, empty = false, emptyMessage, class: className = '' } = Astro.props;
---

{empty ? (
  <div class:list={["glass-panel p-6 text-center", className]}>
    <slot name="icon" />
    <p class="text-sm text-muted-foreground">{emptyMessage}</p>
  </div>
) : (
  <div class:list={["glass-panel", className]}>
    <div class="p-6">
      {title && <h3 class="text-base font-medium mb-4">{title}</h3>}
      <slot />
    </div>
  </div>
)}

<style>
  .glass-panel {
    @apply bg-white/70 backdrop-blur-lg backdrop-filter rounded-2xl border border-white/20 shadow-sm;
  }
</style>