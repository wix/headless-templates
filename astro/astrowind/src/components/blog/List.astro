---
import Item from '~/components/blog/ListItem.astro';
import type { Post } from '~/types';

export interface Props {
  posts: Array<Post>;
}

const { posts } = Astro.props;
---

{
  posts.length === 0 ? (
    <div>There are no posts available.</div>
  ) : (
    <ul>
      {posts.map((post) => (
        <li class="mb-12 md:mb-20">
          <Item post={post} />
        </li>
      ))}
    </ul>
  )
}
