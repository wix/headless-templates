---
import { RicosViewer, quickStartViewerPlugins } from "@wix/ricos";
import { type CollectionEntry, getCollection } from "astro:content";
import BlogPost from "../../layouts/BlogPost.astro";
import "@wix/ricos/css/all-plugins-viewer.css";

export async function getStaticPaths() {
  const posts = await getCollection("blog");
  return posts.map((post) => ({
    params: { slug: post.id },
    props: post,
  }));
}
type Props = CollectionEntry<"blog">;

const post = Astro.props;
const plugins = quickStartViewerPlugins();

console.log(post.data.richContent);
---

<script>
  if (typeof window !== "undefined") {
    console.log("wds draft-js fix global, needed only for dev env");
    window.global = window;
  }
</script>
<BlogPost {...post.data}>
  <RicosViewer content={post.data.richContent} plugins={plugins} />
</BlogPost>
